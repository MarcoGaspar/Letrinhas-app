<header class="bar bar-nav" style="padding:0; background:#488AC4; color:#fff; border: none;">
    <a class="icon pull-left" style="color:white; padding-left:10px;"><i class="fa fa-refresh" aria-hidden="true"></i></a>
    <h1 class="title" style="color:#fff;">
        <i class="fa fa-graduation-cap" aria-hidden="true"></i>
        Letrinhas v3
    </h1>
</header>

<div class="loader2" >
    <div class="placeholder light">
        <div class="spinner"></div>
    </div>
</div>

<div class="content">

    <div class="panel panel-default" style="margin:20px 35px; text-align:center;">
        <div class="panel-body">
            {{title}}
        </div>
    </div>

    <div class="panel-body" style="margin: 0 35px; border:1px solid #1a1a1a; background:white; text-align:center;">

        <table id="testArea" style="width:100%;">

            <tr>

                {{#each content.columns}}
                <td class="well" align="center" valign="top" style="width:30%">
                    {{#each words}}
                    <p id="{{@../index}}{{@index}}" class="selectable" style="font-weight:bold; font-size:20px; padding:5px 0;">
                        {{this}}
                    </p>
                    {{/each}}
                </td>
                {{/each}}

            </tr>

        </table>


    </div>

    <!--Audio Records-->
    <div class="panel panel-info" style="float:left; width:47%; margin:20px 0 20px 35px;">
        <div class="panel-heading">Ouvir:</div>
        <div class="panel-body">

            <!--Student Audio-->
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon1">Aluno: </span>
                <audio id="audioPlayerStudent" style="width:98%; z-index:9999" autobuffer="autobuffer" controls></audio>
            </div>

            <br>

            <!--Teacher Audio-->
            <div class="input-group">
                <span class="input-group-addon" id="basic-addon2">Professor: </span>
                <audio id="audioPlayerTeacher" style="width:98%; z-index:9999" autobuffer="autobuffer" controls></audio>
            </div>

        </div>
    </div>

    <!--Final Result-->
    <div class="panel panel-success" style="float:right; width:47%; margin:20px 35px 20px 0;">
        <div class="panel-heading">Resultados:</div>
        <div class="panel-body">

            <!--Wrong Words Counter-->
            <p><b>Palavras Erradas:</b> <span id="wrongWords" class="badge">0</span></p>

            <!--Submit Button-->
            <button id="btnConfirm" class="btn btn-positive btn-block">Finalizar</button>

        </div>
    </div>

</div>

<!--POPOVER INFO-->
